<%= form_for @project do | f |%>
<div class="field">
  <%= f.label :name, class: 'label' %>
  <div class="control">
    <%= f.text_field :name, class: 'input is-medium' %>
  </div>
  <p class="help">Nome del progetto</p>
</div>
<div class="field">
  <%= f.label :prod_url, class: 'label' %>
  <div class="control">
    <%= f.text_field :prod_url, class: 'input is-medium' %>
  </div>
  <p class="help">Url di produzione</p>
</div>
<div class="field">
  <%= f.label :staging_url, class: 'label' %>
  <div class="control">
    <%= f.text_field :staging_url, class: 'input is-medium' %>
  </div>
  <p class="help">Staging url</p>
</div>
<div class="field">
  <%= f.label :repo_url, class: 'label' %>
  <div class="control">
    <%= f.text_field :repo_url, class: 'input is-medium' %>
  </div>
  <p class="help">Repos url</p>
</div>
<div class="field">
  <%= f.label :admin_user, class: 'label' %>
  <div class="control">
    <%= f.text_field :admin_user, class: 'input is-medium' %>
  </div>
  <p class="help">Admin user</p>
</div>
<div class="field">
  <%= f.label :admin_password, class: 'label' %>
  <div class="control">
    <%= f.text_field :admin_password, class: 'input is-medium' %>
  </div>
  <p class="help">Admin password</p>
</div>
<div class="field is-grouped is-grouped-right">
  <p class="control">
    <%= f.submit 'salva', class: 'button is-primary' %>
  </p>
</div>
<% end %>
